---

<Layout title="CV - Ryan Y. Lin" description="Academic and professional curriculum vitae">
  <div class="max-w-4xl mx-auto pt-8">
    <div class="flex items-center justify-between mb-8">
      <h1 class="text-4xl font-bold text-neutral-900 dark:text-neutral-50">Curriculum Vitae</h1>
      <a 
        href="/assets/pdf/cv.pdf" 
        class="inline-flex items-center justify-center w-12 h-12 bg-accent-600 hover:bg-accent-700 dark:bg-accent-500 dark:hover:bg-accent-600 text-white rounded-lg transition-colors duration-200"
        target="_blank"
        title="Download Full CV"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      </a>
    </div>
    
    <!-- Personal Information -->
    <section class="mb-8 bg-neutral-50 dark:bg-neutral-800 rounded-lg px-6 pt-4 pb-6 shadow-sm">
      <h2 class="text-2xl font-semibold mb-4 text-neutral-900 dark:text-neutral-50">Personal Information</h2>
      <div class="space-y-2 text-neutral-700 dark:text-neutral-300">
        <p><span class="font-medium text-neutral-900 dark:text-neutral-50">Full Name:</span> {personalInfo.fullName}</p>
        <p><span class="font-medium text-neutral-900 dark:text-neutral-50">Languages:</span> {personalInfo.languages.join(", ")}</p>
        <p><span class="font-medium text-neutral-900 dark:text-neutral-50">Email:</span> <a href={`mailto:${personalInfo.email}`} class="text-accent-600 dark:text-accent-400 hover:text-accent-700 dark:hover:text-accent-300 transition-colors duration-200">{personalInfo.email}</a></p>
        <div class="flex space-x-4">
          <a 
            href={`https://github.com/${personalInfo.github}`} 
            target="_blank" 
            rel="noopener noreferrer" 
            class="inline-flex items-center px-4 py-2 bg-accent-600 hover:bg-accent-700 dark:bg-accent-500 dark:hover:bg-accent-600 text-white rounded-lg transition-colors duration-200"
          >
            <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
            GitHub
          </a>
          <a 
            href={`https://linkedin.com/in/${personalInfo.linkedin}`} 
            target="_blank" 
            rel="noopener noreferrer" 
            class="inline-flex items-center px-4 py-2 bg-accent-600 hover:bg-accent-700 dark:bg-accent-500 dark:hover:bg-accent-600 text-white rounded-lg transition-colors duration-200"
          >
            <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            LinkedIn
          </a>
        </div>
      </div>
    </section>

    <!-- Education -->
    <section class="mb-8 bg-neutral-50 dark:bg-neutral-800 rounded-lg px-6 pt-4 pb-6 shadow-sm">
      <h2 class="text-2xl font-semibold mb-4 text-neutral-900 dark:text-neutral-50">Education</h2>
      <div class="space-y-8">
        {education.map((edu) => (
          <div class="education-item">
            <h3 class="text-xl font-medium text-neutral-900 dark:text-neutral-50">{edu.title}</h3>
            <p class="text-neutral-600 dark:text-neutral-300">{edu.institution}</p>
            <p class="text-sm text-neutral-500 dark:text-neutral-400">{edu.year}</p>
            {edu.descriptions && (
              <ul class="list-disc pl-5 mt-2 space-y-1 text-neutral-700 dark:text-neutral-300">
                {edu.descriptions.map((desc) => (
                  <li>{desc}</li>
                ))}
              </ul>
            )}
          </div>
        ))}
      </div>
    </section>

    <!-- Experience -->
    <section class="mb-8 bg-neutral-50 dark:bg-neutral-800 rounded-lg px-6 pt-4 pb-6 shadow-sm">
      <h2 class="text-2xl font-semibold mb-4 text-neutral-900 dark:text-neutral-50">Experience</h2>
      <div class="space-y-8">
        {experience.map((exp) => (
          <div class="experience-item">
            <h3 class="text-xl font-medium text-neutral-900 dark:text-neutral-50">{exp.title}</h3>
            <p class="text-neutral-600 dark:text-neutral-300">{exp.institution}</p>
            <p class="text-sm text-neutral-500 dark:text-neutral-400">{exp.year}</p>
            {exp.descriptions && (
              <ul class="list-disc pl-5 mt-2 space-y-1 text-neutral-700 dark:text-neutral-300">
                {exp.descriptions.map((desc) => (
                  <li>{desc}</li>
                ))}
              </ul>
            )}
          </div>
        ))}
      </div>
    </section>

    <!-- Publications -->
    <section class="mb-8 bg-neutral-50 dark:bg-neutral-800 rounded-lg px-6 pt-4 pb-6 shadow-sm">
      <h2 class="text-2xl font-semibold mb-4 text-neutral-900 dark:text-neutral-50">Publications</h2>
      <div class="space-y-6">
        {publications.map((pub) => (
          <div class="publication bg-neutral-50 dark:bg-neutral-800 rounded-lg p-6 shadow-sm flex flex-col md:flex-row md:items-start md:space-x-6">
            
            {/* Left: Text Content */}
            <div class="flex-1">
              <h3 class="text-xl font-semibold mb-2 text-neutral-900 dark:text-neutral-50">{pub.title}</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                {pub.authors.map((author) => (
                  author === "Ryan Y. Lin" ? 
                    <span class="font-bold text-accent-600 dark:text-accent-400">{author}</span> : 
                    author
                )).reduce((prev, curr) => [prev, ", ", curr])}
              </p>
              <p class="text-sm text-neutral-600 dark:text-neutral-300 mt-1">
                {pub.venue}, {pub.year}
              </p>
              <div class="mt-4 flex space-x-4">
                {pub.links.pdf && (
                  <a 
                    href={pub.links.pdf} 
                    class="px-3 py-1 rounded-md bg-accent-600 text-white hover:bg-accent-700 dark:bg-accent-500 dark:hover:bg-accent-600 transition-colors duration-200"
                    target="_blank" 
                    rel="noopener noreferrer"
                  >
                    PDF
                  </a>
                )}
                {pub.links.url && (
                  <a 
                    href={pub.links.url} 
                    class="px-3 py-1 rounded-md bg-accent-600 text-white hover:bg-accent-700 dark:bg-accent-500 dark:hover:bg-accent-600 transition-colors duration-200"
                    target="_blank" 
                    rel="noopener noreferrer"
                  >
                    {pub.platform}
                  </a>
                )}
                <button
                  class="px-3 py-1 rounded-md bg-accent-600 text-white hover:bg-accent-700 dark:bg-accent-500 dark:hover:bg-accent-600 transition-colors duration-200 copy-bibtex"
                  data-bibtex={pub.bibtex}
                >
                  BibTeX
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Skills -->
    <section class="mb-8 bg-neutral-50 dark:bg-neutral-800 rounded-lg px-6 pt-4 pb-6 shadow-sm">
      <h2 class="text-2xl font-semibold mb-4 text-neutral-900 dark:text-neutral-50">Skills & Expertise</h2>
      <div class="space-y-6">
        {skills.map((skillGroup) => (
          <div class="skill-group">
            <h3 class="text-lg font-medium mb-2 text-neutral-900 dark:text-neutral-50">{skillGroup.category}</h3>
            <div class="flex flex-wrap gap-2">
              {skillGroup.items.map((skill) => (
                <span class="px-3 py-1 bg-accent-100 dark:bg-accent-900/50 text-accent-800 dark:text-accent-100 rounded text-sm">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Awards -->
    {awards.length > 0 && (
      <section class="mb-8 bg-neutral-50 dark:bg-neutral-800 rounded-lg px-6 pt-4 pb-6 shadow-sm">
        <h2 class="text-2xl font-semibold mb-4 text-neutral-900 dark:text-neutral-50">Honors and Awards</h2>
        <div class="space-y-6">
          {awards.map((award) => (
            <div class="award-item">
              <h3 class="text-lg font-medium text-neutral-900 dark:text-neutral-50">{award.year}</h3>
              <ul class="list-disc pl-5 mt-2 text-neutral-700 dark:text-neutral-300">
                {award.items.map((item) => (
                  <li>{item}</li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </section>
    )}
  </div>
</Layout> 