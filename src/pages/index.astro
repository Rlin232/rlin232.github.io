---
import Layout from '../layouts/Layout.astro';

const socialLinks = {
	github: 'rlin232',
	linkedin: 'ryan-lin232',
	email: 'rylin@caltech.edu',
	googleScholar: 'hl=en&user=3i8ThuwAAAAJ',
};

---

<Layout title="Ryan Lin">
	<div class="max-w-6xl mx-auto pt-8">
		<div class="text-center mb-12">
			<!-- Profile Picture -->
			<div class="mb-6">
				<img
					src="/assets/img/prof_pic_color.jpg"
					alt="Ryan Lin"
					class="rounded-full w-48 h-48 mx-auto object-cover object-top border-4 border-neutral-200 dark:border-neutral-900/50 shadow-lg"
				/>
			</div>
			
			<h1 class="text-4xl font-bold mb-4 text-neutral-900 dark:text-neutral-50">Ryan <span class="text-accent-600 dark:text-accent-400">Y.</span> Lin</h1>
			<p class="text-xl text-neutral-600 dark:text-neutral-300">
				Caltech undergraduate, machine learning researcher
			</p>
			
			<!-- Social Links -->
			<div class="flex justify-center space-x-6 mt-6">
				<a href={`https://github.com/${socialLinks.github}`} target="_blank" rel="noopener noreferrer" 
				   class="text-neutral-600 hover:text-accent-600 dark:text-neutral-400 dark:hover:text-accent-400 transition-colors duration-300">
					<span class="sr-only">GitHub</span>
					<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
						<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
					</svg>
				</a>
				<a href={`https://scholar.google.com/citations?${socialLinks.googleScholar}`} target="_blank" rel="noopener noreferrer" 
				   class="text-neutral-600 hover:text-accent-600 dark:text-neutral-400 dark:hover:text-accent-400 transition-colors duration-300">
					<span class="sr-only">Google Scholar</span>
					<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
							<path d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 1 0 0 14 7 7 0 0 0 0-14z"/>
							<path d="M12 10c-3.866 0-7 3.134-7 7s3.134 7 7 7 7-3.134 7-7-3.134-7-7-7zm-1.834 3h3.668v.875h-3.668V13zm4.167 8.4h-4.666v-.875h4.666v.875zm0-1.75h-4.666v-.875h4.666v.875zm-4.167-4.9h3.668c0 .726-.19 1.413-.499 2.007s-.722 1.072-1.193 1.424c-.345.254-.649.423-.984.513v.056h2.676v.875h-3.668v-.875h.499c.334-.09.638-.26.984-.513.471-.352.884-.83 1.193-1.424.31-.594.499-1.281.499-2.007h-3.175v-.056z"/>
					</svg>
				</a>
				<a href={`https://linkedin.com/in/${socialLinks.linkedin}`} target="_blank" rel="noopener noreferrer"
				   class="text-neutral-600 hover:text-accent-600 dark:text-neutral-400 dark:hover:text-accent-400 transition-colors duration-300">
					<span class="sr-only">LinkedIn</span>
					<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
						<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
					</svg>
				</a>
				<a href={`mailto:${socialLinks.email}`}
				   class="text-neutral-600 hover:text-accent-600 dark:text-neutral-400 dark:hover:text-accent-400 transition-colors duration-300">
					<span class="sr-only">Email</span>
					<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
					</svg>
				</a>
			</div>
		</div>

		<!-- Two-column layout for content -->
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
			<!-- Left column -->
			<div class="bg-neutral-50 dark:bg-neutral-800 rounded-lg p-6 shadow-sm">
				<h2 class="text-2xl font-semibold mb-4 text-neutral-900 dark:text-neutral-50">About Me</h2>
				<p class="text-lg text-neutral-700 dark:text-neutral-300">
					Hi, I'm Ryan Lin, an undergraduate student at Caltech studying Computer Science. I'm currently an AI/ML intern at Apple, Inc. During the school year, I am a researcher at the Anima AI + Science Lab, focusing on machine learning and AI. I also have four summers of work experience at the MITRE Corporation as a software engineer and DevSecOps engineer. Outside of tech, I'm a member of Caltech's NCAA Division III Swimming & Diving team.
				</p>
			</div>

			<!-- Right column -->
			<div class="space-y-8">
				<div class="bg-neutral-50 dark:bg-neutral-800 rounded-lg p-6 shadow-sm">
					<h2 class="text-2xl font-semibold mb-4 text-neutral-900 dark:text-neutral-50">Research Interests</h2>
					<ul class="list-disc pl-5 space-y-2 text-neutral-700 dark:text-neutral-300">
						<li>Physics-informed Machine Learning</li>
						<li>Large Language Models</li>
						<li>Network Economics</li>
					</ul>
				</div>

				<div class="bg-neutral-50 dark:bg-neutral-800 rounded-lg p-6 shadow-sm">
					<h2 class="text-2xl font-semibold mb-4 text-neutral-900 dark:text-neutral-50">Recent Updates</h2>
					<div class="space-y-4 text-neutral-700 dark:text-neutral-300">
						<p>Check out my latest work in the <a href="/projects" class="text-accent-600 dark:text-accent-400 hover:text-accent-700 dark:hover:text-accent-300 transition-colors duration-200">Projects</a> section.</p>
						<p>View my publications and research in the <a href="/publications" class="text-accent-600 dark:text-accent-400 hover:text-accent-700 dark:hover:text-accent-300 transition-colors duration-200">Publications</a> section.</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</Layout>
