---
import Layout from '../layouts/Layout.astro';

const socialLinks = {
	github: 'rlin232',
	linkedin: 'ryan-lin232',
	email: 'rylin@caltech.edu',
	googleScholar: 'hl=en&user=3i8ThuwAAAAJ',
};

const researchInterests = [
	"Physics-informed Machine Learning",
	"Large Language Models",
	"Network Economics"
];
---

<Layout title="Ryan Lin | AI Researcher & Developer">
	<div class="max-w-6xl mx-auto px-4">
		
		<!-- Hero Section -->
		<section class="min-h-[80vh] flex flex-col justify-center items-center text-center relative mb-20">
			<div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[90vw] max-w-[500px] h-[90vw] max-h-[500px] bg-accent-600/20 rounded-full blur-[100px] -z-10 animate-pulse"></div>
			
			<div class="mb-8 relative group" data-aos="fade-down">
				<div class="absolute -inset-1 bg-gradient-to-r from-accent-600 to-blue-600 rounded-full blur opacity-25 group-hover:opacity-75 transition duration-1000 group-hover:duration-200"></div>
				<img
					src="/assets/img/prof_pic_color.jpg"
					alt="Ryan Lin"
					class="relative rounded-full w-40 h-40 md:w-56 md:h-56 mx-auto object-cover object-top border-4 border-slate-900 shadow-2xl"
				/>
			</div>
			
			<h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tight" data-aos="fade-up" data-aos-delay="50">
				Ryan <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent-400 to-blue-500">Y.</span> Lin
			</h1>
			
			<div class="text-xl md:text-2xl text-slate-400 mb-10 max-w-2xl font-light" data-aos="fade-up" data-aos-delay="100">
				<span id="typewriter"></span>
			</div>
			
			<!-- Social Links -->
			<div class="flex justify-center space-x-8" data-aos="fade-up" data-aos-delay="150">
				<a href={`https://github.com/${socialLinks.github}`} target="_blank" rel="noopener noreferrer" 
				   class="text-slate-400 hover:text-white transform hover:scale-110 transition-all duration-300">
					<span class="sr-only">GitHub</span>
					<svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
						<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
					</svg>
				</a>
				<a href={`https://scholar.google.com/citations?${socialLinks.googleScholar}`} target="_blank" rel="noopener noreferrer" 
				   class="text-slate-400 hover:text-white transform hover:scale-110 transition-all duration-300">
					<span class="sr-only">Google Scholar</span>
					<svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
							<path d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 1 0 0 14 7 7 0 0 0 0-14z"/>
							<path d="M12 10c-3.866 0-7 3.134-7 7s3.134 7 7 7 7-3.134 7-7-3.134-7-7-7zm-1.834 3h3.668v.875h-3.668V13zm4.167 8.4h-4.666v-.875h4.666v.875zm0-1.75h-4.666v-.875h4.666v.875zm-4.167-4.9h3.668c0 .726-.19 1.413-.499 2.007s-.722 1.072-1.193 1.424c-.345.254-.649.423-.984.513v.056h2.676v.875h-3.668v-.875h.499c.334-.09.638-.26.984-.513.471-.352.884-.83 1.193-1.424.31-.594.499-1.281.499-2.007h-3.175v-.056z"/>
					</svg>
				</a>
				<a href={`https://linkedin.com/in/${socialLinks.linkedin}`} target="_blank" rel="noopener noreferrer"
				   class="text-slate-400 hover:text-white transform hover:scale-110 transition-all duration-300">
					<span class="sr-only">LinkedIn</span>
					<svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
						<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
					</svg>
				</a>
				<a href={`mailto:${socialLinks.email}`}
				   class="text-slate-400 hover:text-white transform hover:scale-110 transition-all duration-300">
					<span class="sr-only">Email</span>
					<svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
					</svg>
				</a>
			</div>
			
			<div class="absolute bottom-10 animate-bounce text-slate-500">
				<svg class="w-10 h-10 drop-shadow-[0_0_8px_rgba(255,255,255,0.5)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
				</svg>
			</div>
		</section>

		<!-- Content Grid -->
		<div class="grid grid-cols-1 lg:grid-cols-12 gap-8 mb-20">
			
			<!-- About Me (Spans 8 columns) -->
			<div class="lg:col-span-8 glass-card rounded-2xl p-8" data-aos="fade-up" data-aos-offset="200">
				<h2 class="text-2xl font-bold mb-6 flex items-center">
					<span class="bg-accent-500 w-2 h-8 mr-4 rounded-full"></span>
					About Me
				</h2>
				<p class="text-lg text-slate-300 leading-relaxed mb-6">
					Hi, I'm Ryan Lin, an undergraduate student at <span class="text-accent-400 font-medium">Caltech</span> studying Computer Science. 
				</p>
				<p class="text-lg text-slate-300 leading-relaxed mb-6">
					In 2025, I spent a summer as an AI/ML intern at <span class="text-white font-medium">Apple, Inc</span>. During the school year, I am a researcher at the <span class="text-accent-400 font-medium">Anima AI + Science Lab</span>, focusing on machine learning and AI. 
				</p>
				<p class="text-lg text-slate-300 leading-relaxed">
					I also have four summers of work experience at the <span class="text-white font-medium">MITRE Corporation</span> as a software engineer and DevSecOps engineer. Outside of tech, I'm a member of Caltech's NCAA Division III Swimming & Diving team.
				</p>
			</div>

			<!-- Quick Info / Interests (Spans 4 columns) -->
			<div class="lg:col-span-4 space-y-8">
				<div class="glass-card rounded-2xl p-8 h-full" data-aos="fade-up" data-aos-delay="100" data-aos-offset="200">
					<h2 class="text-xl font-bold mb-6 flex items-center">
						<svg class="w-6 h-6 mr-3 text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
						</svg>
						Research Interests
					</h2>
					<ul class="space-y-4">
						{researchInterests.map((interest) => (
							<li class="flex items-center text-slate-300 bg-white/5 p-3 rounded-lg hover:bg-white/10 transition-colors">
								<span class="w-2 h-2 bg-accent-500 rounded-full mr-3"></span>
								{interest}
							</li>
						))}
					</ul>
				</div>
			</div>

			<!-- Recent Updates (Full Width) -->
			<div class="lg:col-span-12 glass-card rounded-2xl p-8 relative overflow-hidden group" data-aos="fade-up" data-aos-delay="200" data-aos-offset="50">
				<div class="absolute top-0 right-0 w-64 h-64 bg-accent-600/10 rounded-full blur-[80px] -mr-32 -mt-32 transition-all duration-700 group-hover:bg-accent-600/20"></div>
				
				<h2 class="text-2xl font-bold mb-6 flex items-center relative z-10">
					<svg class="w-6 h-6 mr-3 text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"></path>
					</svg>
					Recent Updates
				</h2>
				
				<div class="relative z-10">
					<div class="bg-slate-900/50 border border-white/5 rounded-xl p-6 hover:border-accent-500/30 transition-colors">
						<div class="flex flex-col md:flex-row md:items-center justify-between mb-2">
							<span class="text-accent-400 text-sm font-mono mb-2 md:mb-0">Latest News</span>
							<span class="text-slate-500 text-sm">NeurIPS 2025</span>
						</div>
						<p class="text-lg text-slate-200">
							Excited to share that I'll be presenting three papers at <a href="https://neurips.cc/" class="text-accent-400 hover:text-accent-300 underline decoration-accent-400/30 underline-offset-4 transition-all">NeurIPS 2025</a>! 
							See my <a href="/publications" class="text-accent-400 hover:text-accent-300 underline decoration-accent-400/30 underline-offset-4 transition-all">Publications</a> page for more details on the workshops/papers.
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script>
		// Typewriter effect
		const text = "Caltech Undergraduate | Machine Learning Researcher";
		const speed = 50;
		const element = document.getElementById("typewriter");
		let i = 0;

		function typeWriter() {
			if (i < text.length) {
				element.innerHTML += text.charAt(i);
				i++;
				setTimeout(typeWriter, speed);
			}
		}

		// Start typing when element is in view or after a slight delay
		setTimeout(typeWriter, 1000);
	</script>
</Layout>
