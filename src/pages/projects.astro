---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: "Lattice Point Geometry Proof Portfolio",
    description: "A collection of 100+ proofs exploring the fundamental properties of the lattice plane.",
    image: "/assets/img/LPG.png",
    technologies: ["High School Project", "Mathematics", "Geometry", "Proof Writing"],
  },
  {
    title: "Quantum Machine Learning",
    description: "Research on quantum machine learning algorithms and their applications.",
    image: "/assets/img/QuantumML.png",
    technologies: ["High School Project", "Quantum Computing", "Machine Learning", "Python"],
  },
  {
    title: "Stock Price Prediction with LSTM",
    description: "Implementation of LSTM neural networks for stock price prediction.",
    image: "/assets/img/StockLSTM.png",
    technologies: ["High School Project", "Deep Learning", "Python", "TensorFlow"],
  },
  {
    title: "Y86 Processor",
    description: "Implementation of a Y86 processor in hardware description language.",
    image: "/assets/img/Y86.png",
    technologies: ["High School Project", "Computer Architecture", "X86"],
  }
];
---

<Layout title="Projects | Ryan Lin" description="Research and development projects">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <h1 class="text-4xl font-bold mb-12 text-white" data-aos="fade-down">Projects</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {projects.map((project, index) => (
        <div class="glass-card rounded-2xl overflow-hidden group hover:border-accent-500/30 transition-all duration-300" 
             data-aos="fade-up" data-aos-delay={index * 100}>
          <div class="aspect-w-16 aspect-h-9 overflow-hidden">
            {project.image ? (
              <img 
                src={project.image} 
                alt={project.title}
                class="w-full h-48 object-cover transform group-hover:scale-105 transition-transform duration-500"
              />
            ) : (
              <div class="w-full h-48 bg-slate-900/50 flex items-center justify-center text-slate-500">
                Image Coming Soon
              </div>
            )}
          </div>
          <div class="p-8">
            <div class="flex justify-between items-start mb-4">
              <h3 class="text-xl font-bold text-white group-hover:text-accent-400 transition-colors">{project.title}</h3>
            </div>
            <p class="text-slate-400 mb-6 leading-relaxed">
              {project.description}
            </p>
            <div class="flex flex-wrap gap-2">
              {project.technologies.map((tech) => (
                <span class="px-3 py-1 bg-accent-500/10 text-accent-300 border border-accent-500/20 text-xs font-medium rounded-full">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout> 